{
    "compilerOptions": {
        "baseUrl": ".",
        "module": "ESNext",
        "target": "es2016",
        "lib": ["DOM", "ESNext"],
        "strict": true,
        "esModuleInterop": true,
        "incremental": true,
        "skipLibCheck": true,
        "moduleResolution": "node",
        "resolveJsonModule": true,
        "noUnusedLocals": true,
        "strictNullChecks": true,
        "forceConsistentCasingInFileNames": true,
        "types": ["vite/client"],
        "paths": {
            "~/*": ["src/*"]
        }
    },
    "include": ["src/**/*.ts", "src/**/*.d.ts", "src/**/*.vue"]
}
